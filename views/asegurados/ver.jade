extends layout

block actions
  +linkButton('/asegurados/', 'lista')
  +linkButton('/asegurados/'+asegurado._id+'/edit', 'editar')

block content
  h1= title

  ul
    li.nombres
      strong= 'Nombre: '
      = ' ' + asegurado.nombres

    li.apellidos
      strong= 'Apellidos: '
      = ' ' + asegurado.apellidos

    li.ci
      strong= 'C.I.: '
      = ' ' + asegurado.ci

    li.direccion
      strong= 'Direccion: '
      = ' ' + asegurado.direccion

    li.edad
      strong= 'Edad: '
      = ' ' + asegurado.edad() + ' a√±os'

    li
      strong Telefonos
      ul
        each tel in asegurado.telefonos
          li= tel
